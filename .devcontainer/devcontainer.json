{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "customizations": {
    "codespaces": {
      "repositories": {
        "PE-Classroom/01-codepilot": {
          "permissions": {
            "contents": "read"
          }
        }
      }
    },

    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-vscode.live-server"
      ],
      "settings": {
        "livePreview.autoRefreshPreview": "On All Changes in Editor",
        "editor.minimap.enabled": false
      }
    }
  }
}
